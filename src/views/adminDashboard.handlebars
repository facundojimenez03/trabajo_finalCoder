{{#if user}}
    {{#if (equals user.role "user")}}
        <div class="text-center bg-secondary text-white py-4 rounded shadow-sm">
            <h2 class="mb-3">Hola,
                <span class="font-weight-bold text-uppercase">{{user.first_name}}</span>
            </h2>
        </div>
    {{else}}
        <div class="text-center bg-dark text-white py-4 rounded shadow-sm">
            <h2 class="mb-3">Bienvenido, Administrador:</h2>
            <h2 class="font-weight-bold text-uppercase">{{user.first_name}}</h2>
        </div>
    {{/if}}
{{else}}
    <div class="alert alert-warning text-center mt-4">
        <p class="mb-2">Inicia sesion</p>
        <a href="/" class="btn btn-warning btn-lg">Iniciar sesi√≥n</a>
    </div>
{{/if}}

<div class="container my-5">
    <ul class="list-group">
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center bg-light">
            <a href="/adminViewAllProducts" class="text-decoration-none text-dark font-weight-bold">
                <i class="fas fa-boxes"></i> Administrar productos
            </a>
            <span class="badge badge-primary badge-pill"><i class="fas fa-edit"></i></span>
        </li>
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center bg-light">
            <a href="/adminAddProduct" class="text-decoration-none text-dark font-weight-bold">
                <i class="fas fa-plus-circle"></i> Agregar nuevo producto
            </a>
            <span class="badge badge-success badge-pill"><i class="fas fa-plus"></i></span>
        </li> 
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center bg-light">
            <a href="/chat" class="text-decoration-none text-dark font-weight-bold">
                <i class="fas fa-comments"></i> Mensajeria
            </a>
            <span class="badge badge-info badge-pill"><i class="fas fa-comment-dots"></i></span>
        </li>
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center bg-light">
            <a href="#" class="text-decoration-none text-dark font-weight-bold">
                <i class="fas fa-ellipsis-h"></i> Otras opciones
            </a>
            <span class="badge badge-secondary badge-pill"><i class="fas fa-cogs"></i></span>
        </li>
    </ul>
</div>
