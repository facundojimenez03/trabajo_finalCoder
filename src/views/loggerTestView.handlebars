
<div class="container mt-5">
    <h1 class="text-center">Logger Test View</h1>
    <div class="text-center">
        <button id="debugBtn" class="btn btn-outline-dark mt-3">Test Debug Log</button>
        <button id="httpBtn" class="btn btn-success mt-3">Test Http Log</button>
        <button id="infoBtn" class="btn btn-primary mt-3">Test Info Log</button>
        <button id="warnBtn" class="btn btn-warning mt-3">Test Warning Log</button>
        <button id="errorBtn" class="btn mt-3" style="background-color: orange;">Test Error Log</button>
        <button id="fatalBtn" class="btn btn-danger mt-3">Test Fatal Log</button>
    </div>
</div>
<script>
    document.getElementById('debugBtn').addEventListener('click', () => {
        fetch('/loggerTest?level=debug')
            .then(response => response.json())
            .then(data => {
                Swal.fire('Debug Log', data.message, 'success')
            })
    })

    document.getElementById('httpBtn').addEventListener('click', () => {
        fetch('/loggerTest?level=http')
            .then(response => response.json())
            .then(data => {
                Swal.fire('Http Log', data.message, 'success')
            })
    })

    document.getElementById('infoBtn').addEventListener('click', () => {
        fetch('/loggerTest?level=info')
            .then(response => response.json())
            .then(data => {
                Swal.fire('Info Log', data.message, 'success')
            })
    })

    document.getElementById('warnBtn').addEventListener('click', () => {
        fetch('/loggerTest?level=warning')
            .then(response => response.json())
            .then(data => {
                Swal.fire('Warning Log', data.message, 'warning')
            })
    })

    document.getElementById('errorBtn').addEventListener('click', () => {
        fetch('/loggerTest?level=error')
            .then(response => response.json())
            .then(data => {
                Swal.fire('Error Log', data.message, 'error')
            })
    })

    document.getElementById('fatalBtn').addEventListener('click', () => {
        fetch('/loggerTest?level=fatal')
            .then(response => response.json())
            .then(data => {
                Swal.fire('Fatal Log', data.message, 'error')
            })
    })
</script>
